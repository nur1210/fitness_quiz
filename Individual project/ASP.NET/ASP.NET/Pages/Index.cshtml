@page
@model WebApp.Pages.IndexModel
@{
	ViewData["Title"] = "Login page";
}

<body>
	<div class="container">
		<form method="post">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			<h1>Login</h1>
			<p>Please fill in your details.</p>
			<hr />
			<span class="text-danger" asp-validation-for="credential.Email"></span>
			<label asp-for="credential.Email">Email</label>
			<input type="text" data-val="true" data-var-required="Please fill the email field" asp-for="credential.Email" class="form-control" />

			<span class="text-danger" asp-validation-for="credential.Password"></span>
			<label asp-for="credential.Password">Password</label>
			<input type="password" asp-for="credential.Password" class="form-control" />
			<hr />

			<div style="text-align:center;">
				<input type="submit" class="btn" value="Login">
			</div>

			<div class="container register">
				<p>Don't have an account? <a asp-area="" asp-page="/Account/Register">Register</a>.</p>
			</div>
		</form>
	</div>
</body>

